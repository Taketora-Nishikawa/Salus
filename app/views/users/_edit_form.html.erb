<%= render 'shared/error_messages' %>

<div class="card">
  <div class="content">
    <%= form_with model: user do |f| %>
      <div class="form-group">
         <%= f.label :name, 'ユーザー名' %>
         <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password, 'パスワード変更(変更しない場合は同じパスワードを入力して下さい!)' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード変更（確認）' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
      <div class="form-group mb-4">
        <%= f.label :age, "年齢" %>
        <%= f.number_field :age, class: "form-control", min: 0 %>
      </div>
      <div class="row">
        <div class="col-md-6">
          <div class="form-group mb-4">
            <%= f.label :birthday, "生年月日" %>
            <%= f.date_select :birthday, class: "form-control", default: { year: 2000, month: 1, day: 1 }, start_year: 1900, end_year: 2020 %>
          </div>
          <div class="form-group mb-4">
            <%= f.label :sex, "性別" %>
            <%= f.radio_button :sex, "男" %>男 <%= f.radio_button :sex, "女" %>女 <%= f.radio_button :sex, "どちらでもない" %>どちらでもない
          </div>
           <div class="form-group mb-4">
            <%= f.label :profile_image, "プロフィール画像" %>
            <%= f.file_field :profile_image%>
          </div>
        </div>
        <div class="col-md-6">
          <div class="form-group">
            <%= f.label :height, "身長" %>
            <%= f.number_field :height, class: "form-control", min: 0 %>
          </div>
          <div class="form-group">
            <%= f.label :body_weight, "体重" %>
            <%= f.number_field :body_weight, class: "form-control", min: 0 %>
          </div>
         </div>  
      </div>
      <div class="form-group">
        <%= f.label :self_introduction, "自己紹介" %>
        <%= f.text_area :self_introduction, class: "form-control", rows: 5 %>
      </div>
      <div class="form-group">
        <%= f.label :commit, "目標" %>
        <%= f.text_area :commit, class: "form-control", rows: 5 %>
      </div>
      
      <%= f.submit "保存", class: "btn btn-primary" %>
    <% end %>
  </div>  
</div>